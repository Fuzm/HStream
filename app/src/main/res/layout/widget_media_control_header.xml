<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/view_header"
    android:background="@color/primary_drawable_light"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="4dip">

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/back_button"
        android:layout_width="@dimen/mc_middle_size"
        android:layout_height="@dimen/mc_middle_size"
        android:background="@null"
        android:layout_gravity="center_vertical"
        android:src="@drawable/ic_tool_back"
        android:visibility="gone"/>

    <com.stream.widget.AutoMarqueeTextView
        android:id="@+id/view_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:singleLine="true"
        android:maxLines="1"
        android:textAppearance="@style/TextAppearance.AppCompat.Title.Inverse"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:ellipsize="marquee"
        android:marqueeRepeatLimit="marquee_forever"
        android:background="@drawable/transparent"
        android:textSize="14sp"/>
</LinearLayout>

